@{
    Layout = null;
}
@model ProyectoExamen.DTOs.VentaDTO
<!DOCTYPE html>
<html>
<head>
    <title>Nueva Venta</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <h2>Registrar Nueva Venta</h2>

    @if (ViewData.ModelState.ErrorCount > 0)
    {
        <div >
            <strong>Errores:</strong>
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <form action="/Ventas/Create" method="post">
        @Html.AntiForgeryToken()

        <div>
            <label>Producto</label><br>
            <input type="text" name="Producto" value="@Model?.Producto" required />
        </div>

        <br>

        <div>
            <label>Cantidad</label><br>
            <input type="number" name="Cantidad" value="@Model?.Cantidad" required />
        </div>

        <br>

        <div>
            <label>Precio</label><br>
            <input type="number" step="0.01" name="Precio" value="@Model?.Precio" required />
        </div>

        <br>

        <div>
            <button type="submit">Guardar</button>
            <a href="/Ventas">Cancelar</a>
        </div>
    </form>

</body>
</html>
